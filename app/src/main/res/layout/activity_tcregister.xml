<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fb1"
    android:weightSum="8"
    tools:context="com.example.siddharth.metroticket.tcregister">



    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:src="@drawable/tc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <EditText
            android:layout_margin="10dp"
            android:id="@+id/name"

            android:hint="ENTER NAME"
            android:textColorHint="#cac6c6"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>








    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/id_no"
            android:inputType="number"
            android:hint="ENTER ID"
            android:textColorHint="#cac6c6"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>





    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:layout_margin="10dp"
            android:id="@+id/passwd"

            android:hint="ENTER PASSWORD"
            android:textColorHint="#cac6c6"
            android:textColor="#000"
            android:inputType="numberPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <EditText
            android:layout_margin="10dp"
            android:id="@+id/confpasswd"

            android:hint="ENTER CONFIRMPASSWORD"

            android:textColorHint="#cac6c6"
            android:textColor="#000"
            android:inputType="numberPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">



        <Button
            android:layout_marginLeft="140dp"
            android:id="@+id/btn"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:background="@drawable/shape_register"
            android:text="register"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>











</LinearLayout>
